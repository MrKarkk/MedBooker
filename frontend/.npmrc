# Настройки npm для надежной установки зависимостей

# Повторные попытки при ошибках сети
fetch-retries=10
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Увеличенный таймаут сети
fetch-timeout=600000
timeout=600000

# Основной реестр
registry=https://registry.npmjs.org/

# Отключить строгую проверку SSL (только для development с проблемами)
# strict-ssl=false

# Использовать кэш
prefer-offline=true
